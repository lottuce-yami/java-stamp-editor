<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.VPos?>
<?import javafx.scene.text.TextAlignment?>
<?import javafx.scene.control.SpinnerValueFactory.DoubleSpinnerValueFactory?>
<VBox fx:controller="moe.lottuce.stampeditor.controllers.HorizontalTextController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <VBox>
            <Label text="Text" />
            <TextField fx:id="text" />
        </VBox>
        <VBox>
            <Label text="Font name" />
            <TextField fx:id="fontName" />
            <Label text="Font size" />
            <Spinner fx:id="fontSize">
                <valueFactory>
                    <SpinnerValueFactory.DoubleSpinnerValueFactory min="0.0" max="Infinity" amountToStepBy="1.0" />
                </valueFactory>
            </Spinner>
        </VBox>
        <VBox>
            <Label text="Color" />
            <ColorPicker fx:id="color" onAction="#onColorChanged" />
        </VBox>
    </VBox>
    <VBox>
        <Label text="X position" />
        <Spinner fx:id="x">
            <valueFactory>
                <SpinnerValueFactory.DoubleSpinnerValueFactory min="0.0" max="Infinity" amountToStepBy="10.0" />
            </valueFactory>
        </Spinner>
    </VBox>
    <VBox>
        <Label text="Y position" />
        <Spinner fx:id="y">
            <valueFactory>
                <SpinnerValueFactory.DoubleSpinnerValueFactory min="0.0" max="Infinity" amountToStepBy="10.0" />
            </valueFactory>
        </Spinner>
    </VBox>
    <VBox>
        <Label text="Text alignment" />
        <ChoiceBox fx:id="textAlignment">
            <FXCollections fx:factory="observableArrayList">
                <TextAlignment fx:constant="LEFT" />
                <TextAlignment fx:constant="CENTER" />
                <TextAlignment fx:constant="RIGHT" />
                <TextAlignment fx:constant="JUSTIFY" />
            </FXCollections>
        </ChoiceBox>
    </VBox>
    <VBox>
        <Label text="Text baseline" />
        <ChoiceBox fx:id="textBaseline">
            <FXCollections fx:factory="observableArrayList">
                <VPos fx:constant="TOP" />
                <VPos fx:constant="CENTER" />
                <VPos fx:constant="BASELINE" />
                <VPos fx:constant="BOTTOM" />
            </FXCollections>
        </ChoiceBox>
    </VBox>
</VBox>
